<%- include('partials/header') %>

<main class="container py-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="text-primary fw-bold">Catálogo de productos</h2>
    <a href="/dashboard" class="btn btn-secondary btn-sm">
      Volver al Dashboard
    </a>
  </div>

  <div class="row g-4">
    <% if (productos.length === 0) { %>
      <p class="text-muted">No hay productos registrados todavía.</p>
    <% } else { %>
      <% productos.forEach(p => { %>
        <div class="col-md-3">
          <div class="card shadow-sm border-0 rounded-4 h-100">
            <img
              src="/images/productos/<%= p.imagen || 'placeholder.png' %>"
              alt="<%= p.nombre %>"
              class="card-img-top rounded-top-4"
              style="height: 200px; object-fit: cover;"
            />
            <div class="card-body text-center">
              <h5 class="fw-bold text-dark"><%= p.nombre %></h5>
              <p class="text-muted small mb-2"><%= p.descripcion %></p>
              <p class="fw-bold text-success">$ <%= p.precio.toLocaleString() %></p>
              <button
                class="btn btn-primary btn-sm agregar-carrito"
                data-id="<%= p.id_producto %>"
                data-nombre="<%= p.nombre %>"
                data-precio="<%= p.precio %>"
                data-imagen="<%= p.imagen %>"
              >
                Agregar al carrito
              </button>
            </div>
          </div>
        </div>
      <% }) %>
    <% } %>
  </div>
</main>

<script>
  document.querySelectorAll(".agregar-carrito").forEach((btn) => {
    btn.addEventListener("click", async () => {
      const data = {
        id: btn.dataset.id,
        nombre: btn.dataset.nombre,
        precio: btn.dataset.precio,
        imagen: btn.dataset.imagen,
      };

      const res = await fetch("/carrito/agregar", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(data),
      });

      const result = await res.json();
      if (result.success) {
        alert(`${data.nombre} agregado al carrito`);
      } else {
        alert("Error agregando producto");
      }
    });
  });
</script>

<%- include('partials/footer') %>
