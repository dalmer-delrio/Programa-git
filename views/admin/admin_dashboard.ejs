<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Panel de Administraci√≥n ‚Äî La Ferreter√≠a del Barrio</title>

    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/style.css" />

    <style>
      body {
        background-color: #f8f9fc;
      }

      .navbar {
        background-color: #ffffff !important;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
      }

      .navbar-brand {
        font-weight: 700;
        color: #0d6efd !important;
      }

      .dashboard-container {
        padding-top: 5rem;
      }

      .card-stat {
        border: none;
        border-radius: 15px;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s;
      }

      .card-stat:hover {
        transform: translateY(-3px);
      }

      .card-stat h5 {
        color: #6c757d;
        font-size: 0.9rem;
      }

      .card-stat .value {
        font-size: 1.8rem;
        font-weight: 700;
        color: #0d6efd;
      }

      .table {
        border-radius: 10px;
        overflow: hidden;
      }

      footer {
        background: #f1f4f9;
        padding: 1rem 0;
        font-size: 0.9rem;
      }
    </style>
  </head>

  <body>
    <!-- üîπ NAVBAR SUPERIOR -->
    <nav class="navbar navbar-expand-lg fixed-top">
      <div class="container">
        <a class="navbar-brand d-flex align-items-center gap-2" href="/admin/dashboard">
          <img src="/images/logo.png" width="40" height="40" alt="Logo" />
          <span>La Ferreter√≠a del Barrio</span>
        </a>

        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#adminNavbar"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="adminNavbar">
          <ul class="navbar-nav ms-auto align-items-center gap-2">
            <li class="nav-item"><a class="nav-link fw-semibold" href="/admin/dashboard">Dashboard</a></li>
            <li class="nav-item"><a class="nav-link" href="/productos/admin">Productos</a></li>
            <li class="nav-item"><a class="nav-link" href="/admin/pedidos">Pedidos</a></li>
            <li class="nav-item"><a class="nav-link" href="/admin/clientes">Clientes</a></li>
            <li class="nav-item">
              <a class="btn btn-outline-danger btn-sm" href="/logout">Cerrar sesi√≥n</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- üîπ CONTENIDO PRINCIPAL -->
    <main class="container dashboard-container">
      <h2 class="fw-bold text-primary mb-4">Panel de administraci√≥n</h2>

      <!-- üî∏ Tarjetas de estad√≠sticas -->
      <div class="row g-4 mb-5">
        <div class="col-md-3">
          <div class="card card-stat text-center p-3">
            <h5>Productos</h5>
            <div class="value"><%= stats.productos %></div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card card-stat text-center p-3">
            <h5>Clientes</h5>
            <div class="value"><%= stats.clientes %></div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card card-stat text-center p-3">
            <h5>Pedidos</h5>
            <div class="value"><%= stats.pedidos %></div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card card-stat text-center p-3">
            <h5>Ventas Totales</h5>
            <div class="value">$<%= stats.ventas.toLocaleString() %></div>
          </div>
        </div>
      </div>

      <!-- üî∏ √öltimos pedidos -->
      <div class="card shadow-sm border-0 rounded-4">
        <div class="card-header bg-white border-bottom-0 d-flex justify-content-between align-items-center">
          <h5 class="fw-bold text-primary mb-0">√öltimos pedidos</h5>
          <a href="/admin/pedidos" class="btn btn-sm btn-outline-primary">Ver todos</a>
        </div>
        <div class="card-body">
          <% if (pedidos.length === 0) { %>
            <p class="text-muted text-center">No hay pedidos recientes.</p>
          <% } else { %>
          <div class="table-responsive">
            <table class="table align-middle">
              <thead class="table-light">
                <tr>
                  <th>ID</th>
                  <th>Cliente</th>
                  <th>Fecha</th>
                  <th>Total</th>
                  <th>Estado</th>
                </tr>
              </thead>
              <tbody>
                <% pedidos.forEach(p => { %>
                  <tr>
                    <td><%= p.id_pedido %></td>
                    <td><%= p.nombre_cliente %></td>
                    <td><%= new Date(p.fecha).toLocaleDateString('es-CO') %></td>
                    <td>$<%= p.total.toLocaleString() %></td>
                    <td>
                      <span class="badge 
                        <%= p.estado === 'Entregado' ? 'bg-success' : 
                            p.estado === 'Pendiente' ? 'bg-warning text-dark' : 
                            'bg-secondary' %>">
                        <%= p.estado %>
                      </span>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
          <% } %>
        </div>
      </div>
    </main>

    <footer class="text-center mt-5">
      <span>¬© 2025 La Ferreter√≠a del Barrio ‚Äî Panel de Administraci√≥n</span>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
