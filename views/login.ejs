<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Iniciar Sesi칩n - La Ferreter칤a del Barrio</title>

  <!-- Bootstrap Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

  <!-- Estilos base -->
  <link rel="stylesheet" href="/css/style.css" />

  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(135deg, #f1f4f9, #e0e7ff);
      margin: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .login-container {
      position: relative;
      background: #fff;
      border-radius: 15px;
      box-shadow: 0 8px 24px rgba(0,0,0,0.15);
      width: 400px;
      padding: 2.5rem 2rem;
      text-align: center;
      animation: fadeIn 0.5s ease-in-out;
      box-sizing: border-box;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(-10px); }
      to { opacity: 1; transform: translateY(0); }
    }

    /* 游댳 Bot칩n de volver al inicio */
    .btn-volver {
      position: absolute;
      top: 15px;
      left: 15px;
      display: flex;
      align-items: center;
      gap: 6px;
      background: none;
      border: none;
      color: #007bff;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      transition: color 0.2s;
    }
    .btn-volver:hover {
      color: #0056b3;
    }

    .login-header img {
      width: 70px;
      height: 70px;
      margin-bottom: 0.6rem;
    }
    .login-header h3 {
      color: #007bff;
      font-weight: 700;
      margin-bottom: 1.2rem;
    }

    .login-tabs {
      display: flex;
      justify-content: space-around;
      margin-bottom: 1.5rem;
      border-bottom: 2px solid #ddd;
    }
    .login-tab {
      flex: 1;
      padding: 10px;
      font-weight: bold;
      cursor: pointer;
      color: #555;
      transition: all 0.3s;
    }
    .login-tab.active {
      color: #007bff;
      border-bottom: 3px solid #007bff;
    }

    h2 {
      margin-bottom: 1rem;
      color: #333;
    }

    form {
      display: flex;
      flex-direction: column;
      gap: 0.9rem;
    }

    input[type="email"],
    input[type="password"] {
      padding: 10px 40px 10px 10px;
      border: 1px solid #ccc;
      border-radius: 6px;
      font-size: 1rem;
      width: 100%;
      box-sizing: border-box;
    }

    .password-container {
      position: relative;
      width: 100%;
    }

    .toggle-password {
      position: absolute;
      right: 10px;
      top: 50%;
      transform: translateY(-50%);
      background: none;
      border: none;
      cursor: pointer;
      color: #666;
      font-size: 1.2rem;
    }

    button[type="submit"] {
      background-color: #007bff;
      color: white;
      padding: 10px;
      border: none;
      border-radius: 6px;
      font-size: 1rem;
      cursor: pointer;
      transition: 0.3s;
    }
    button[type="submit"]:hover {
      background-color: #0056b3;
    }

    a {
      color: #007bff;
      text-decoration: none;
      font-size: 0.9rem;
    }
    a:hover {
      text-decoration: underline;
    }

    .extra-links {
      margin-top: 1rem;
      display: flex;
      justify-content: center;
      gap: 10px;
      font-size: 0.9rem;
    }

    .error {
      background: #ffdddd;
      color: #a94442;
      padding: 8px;
      border-radius: 5px;
      margin-bottom: 10px;
    }
  </style>
</head>
<body>
  <div class="login-container">
    <!-- 游댳 Bot칩n volver al inicio -->
    <button class="btn-volver" onclick="window.location.href='/'" title="Volver al inicio">
      <i class="bi bi-arrow-left-circle"></i> Inicio
    </button>

    <div class="login-header">
      <img src="/images/logo.png" alt="Logo Ferreter칤a" />
      <h3>La Ferreter칤a del Barrio</h3>
    </div>

    <div class="login-tabs">
      <div id="tab-client" class="login-tab active" onclick="selectRole('cliente')">Ingreso Clientes</div>
      <div id="tab-admin" class="login-tab" onclick="selectRole('admin')">Ingreso Administradores</div>
    </div>

    <h2>Iniciar sesi칩n</h2>

    <% if (error) { %>
      <div class="error"><%= error %></div>
    <% } %>

    <form method="POST" action="/login" id="loginForm">
      <input type="hidden" name="role" id="role" value="cliente" />

      <input type="email" name="correo" placeholder="Correo electr칩nico" required />

      <div class="password-container">
        <input type="password" name="password" id="password" placeholder="Contrase침a" required />
        <button type="button" class="toggle-password" onclick="togglePassword()">
          <i class="bi bi-eye" id="toggleIcon"></i>
        </button>
      </div>

      <button type="submit">Ingresar</button>
    </form>

    <div class="extra-links">
      <a href="/forgot">쯆lvidaste tu contrase침a?</a> |
      <a href="/register">Reg칤strate aqu칤</a>
    </div>
  </div>

  <script>
    function selectRole(role) {
      document.getElementById('role').value = role;
      document.getElementById('tab-client').classList.toggle('active', role === 'cliente');
      document.getElementById('tab-admin').classList.toggle('active', role === 'admin');
    }

    function togglePassword() {
      const input = document.getElementById('password');
      const icon = document.getElementById('toggleIcon');
      if (input.type === 'password') {
        input.type = 'text';
        icon.classList.replace('bi-eye', 'bi-eye-slash');
      } else {
        input.type = 'password';
        icon.classList.replace('bi-eye-slash', 'bi-eye');
      }
    }

    // 游댳 Fusi칩n del carrito
    document.getElementById('loginForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const form = e.target;
      const data = Object.fromEntries(new FormData(form));

      const res = await fetch('/login', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data),
      });

      if (res.redirected) {
        const carritoLocal = JSON.parse(localStorage.getItem('carritoPublico') || '[]');
        if (carritoLocal.length > 0) {
          await fetch('/carrito/fusionar', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ productos: carritoLocal }),
          });
          localStorage.removeItem('carritoPublico');
        }
        window.location.href = res.url;
      } else {
        const html = await res.text();
        document.open();
        document.write(html);
        document.close();
      }
    });
  </script>
</body>
</html>
